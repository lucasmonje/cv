do&&(r="<span class='line-through'>"+r+"<\/span>",u=i.Oferta.Tarjetas[t].Mantenimiento.TextoMasOfertas+" "+i.Oferta.Tarjetas[t].Mantenimiento.CantidadTiempo+" "+i.Oferta.Tarjetas[t].Mantenimiento.TextoUnidadTiempo);f=i.Oferta.Tarjetas[t].Mantenimiento.IvaIncluido;f?(r=r+"*",$("#mantenimientoIVAIncluido-"+n).show()):$("#mantenimientoIVAIncluido-"+n).hide();$("#mantenimientoMasOfertas-"+n).html(r);$("#mantenimientoMasOfertaBonif-"+n).html(u);e=i.Oferta.Tarjetas[t].Renovacion.Bonificado?i.Oferta.Tarjetas[t].Renovacion.TextoMasOfertas:i.Oferta.Tarjetas[t].Renovacion.Costo+"/"+i.Oferta.Tarjetas[t].Renovacion.UnidadTiempo;$("#renovacionMasOfertas-"+n).html(e)}})}function mostrarOtraTarjeta(n,t){$("#Oferta_Container").hide();$("#Loading").show();$.ajax({datatype:"json",type:"POST",url:"/SeleccionOferta/ObtenerOfertaCargada",data:{indice:n,indiceTarjeta:t},success:function(n){IsAjaxError(n)||($("#Oferta_Container").html(n.Model.VistaHtml),$("#Oferta_Container").show(),$("#Loading").hide())}})}var txtBeneficiosTC="Beneficios",txtBeneficiosPQ="Beneficios del servicio",tituloProductosTC="Detalles del producto",tituloProductosPQ="Productos incluídos en el servicio",ofertaSeleccionada={descripcion:"",limiteTotal:"",tipo:""},mantenimiento,renovacion,descripcionOfertaDataLayer,loadingHtml='<div class="content medium"><div class="row"><div class="full-content"><div class="col-xs-12 centered download"><p class="image-download"><\/p><div class="download-message"><p>Estamos procesando tu consulta<\/p> <\/div> <\/div> <\/div> <\/div><\/div>',error_eval='<div class="content"><div class="row"><div class="full-content"><div class="col-xs-12 centered margin-bottom-100"><p class="icon icon-svg error"><\/p><div class="error-message">Para conocer nuestra propuesta, por favor, aguardá unos segundos y reiterá tu consulta<\/div><br/><div><button type="button" class="btn btn-md" onclick="llamarFuncionTimeout()">Volver a Intentar<\/button><\/div><\/div><\/div><\/div><\/div>',textoEncabezado